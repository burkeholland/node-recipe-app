<div class="auth-modal" id="auth-modal" aria-hidden="true" role="dialog" aria-labelledby="auth-modal-title" tabindex="-1">
	<div class="auth-modal__overlay" data-auth-close></div>
	<div class="auth-modal__content flex flex-col" role="document">
		<button class="auth-modal__close" type="button" aria-label="Close dialog" data-auth-close>&times;</button>
		<h2 id="auth-modal-title" class="text-2xl font-semibold text-gray-900">Welcome back</h2>
		<p class="mt-2 text-sm text-gray-500">Log in to pick up where you left off or create a new account in seconds.</p>
		<div class="auth-modal__tabs mt-6 flex rounded-full bg-gray-100 p-1">
			<button class="auth-modal__tab flex-1 rounded-full px-4 py-2 text-sm font-semibold" data-auth-tab="login" aria-controls="auth-login-form" aria-selected="true">Login</button>
			<button class="auth-modal__tab flex-1 rounded-full px-4 py-2 text-sm font-semibold" data-auth-tab="signup" aria-controls="auth-signup-form" aria-selected="false">Register</button>
		</div>
		<div class="auth-modal__forms mt-8">
			<form class="auth-modal__form space-y-5" id="auth-login-form" data-auth-form="login">
				<div class="auth-modal__group">
					<label class="auth-modal__label" for="login-email">Email</label>
					<input class="auth-modal__input" type="email" id="login-email" name="email" autocomplete="email" required>
				</div>
				<div class="auth-modal__group">
					<label class="auth-modal__label" for="login-password">Password</label>
					<input class="auth-modal__input" type="password" id="login-password" name="password" autocomplete="current-password" required>
				</div>
				<div class="auth-modal__actions">
					<button class="auth-modal__primary" type="submit">Login</button>
				</div>
			</form>
			<form class="auth-modal__form auth-modal__form--hidden space-y-5" id="auth-signup-form" data-auth-form="signup">
				<div class="auth-modal__group">
					<label class="auth-modal__label" for="signup-email">Email</label>
					<input class="auth-modal__input" type="email" id="signup-email" name="email" autocomplete="email" required>
				</div>
				<div class="auth-modal__group">
					<label class="auth-modal__label" for="signup-password">Password</label>
					<input class="auth-modal__input" type="password" id="signup-password" name="password" autocomplete="new-password" required minlength="6">
				</div>
				<div class="auth-modal__group">
					<label class="auth-modal__label" for="signup-confirm-password">Confirm Password</label>
					<input class="auth-modal__input" type="password" id="signup-confirm-password" name="confirmPassword" autocomplete="new-password" required minlength="6">
				</div>
				<div class="auth-modal__terms">
					<label class="inline-flex items-center gap-2 text-sm text-gray-600">
						<input type="checkbox" name="terms" class="h-4 w-4 rounded border-gray-300" required>
						I agree to the terms and conditions
					</label>
				</div>
				<div class="auth-modal__actions">
					<button class="auth-modal__primary" type="submit">Register</button>
				</div>
			</form>
		</div>
		<p class="auth-modal__error" id="auth-modal-error" role="status" aria-live="polite"></p>
		<div class="auth-modal__loading" id="auth-modal-loading" hidden aria-hidden="true">
			<span class="auth-modal__spinner" aria-hidden="true"></span>
			<span>Working on it...</span>
		</div>
	</div>
</div>
